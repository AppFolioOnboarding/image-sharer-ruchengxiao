<h1>Listing Articles</h1>

<%= link_to 'New image', new_image_path %>
<br />
<% @images.each do |image| %>
  <b>Tags: </b>
    <% image.tag_list.each do |tag|%>
    <%= link_to tag, images_path(tag: tag) %>  
  <% end %>

  <p>
    <img class="image" src="<%= image.link %>"/>
  </p>

  <p>
    <%= link_to 'Show', image_path(image) %>
  </p>
  <br />
<% end %>
